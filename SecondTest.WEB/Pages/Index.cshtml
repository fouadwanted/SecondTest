@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container mt-4">
    <h1>Flight List</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Id Departure Airport</th>
                <th>id Arrival Airport</th>
            </tr>
        </thead>
        <tbody id="flightListBody"></tbody>
    </table>
    <form id="flightForm">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" required>
        </div>
        <div class="mb-3">
            <label for="departureAirport" class="form-label">Id Departure Airport</label>
            <input type="text" class="form-control" id="departureAirport" required>
        </div>
        <div class="mb-3">
            <label for="arrivalAirport" class="form-label">Id Arrival Airport</label>
            <input type="text" class="form-control" id="arrivalAirport" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
